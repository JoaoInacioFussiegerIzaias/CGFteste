<div class="p-6 max-w-4xl mx-auto">
  <h2 class="text-2xl font-semibold text-center mb-6 ">Registrar</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "max-w-md mx-auto bg-white p-6 rounded-lg shadow-md" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full mt-1 p-2 border border-gray-300 rounded-lg focus:ring focus:ring-blue-200" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign Up", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "users/shared/links" %>
  </div>
</div>