<h1>Editar Blog</h1>

<%= form_with model: @blog, local: true do |form| %>
  <div>
    <%= form.label :titulo, "Título do Blog" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :descricao, "Descrição do Blog" %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.submit "Atualizar Blog" %>
  </div>
<% end %>



<%= link_to "Cancelar", blogs_path, class: "btn btn-secondary" %>
