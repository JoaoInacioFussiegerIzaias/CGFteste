<%= form_with model: @blog, local: true do |form| %>
  <div>
    <%= form.label :titulo, "Título do Blog" %>
    <%= form.text_field :titulo %>
  </div>

  <div>
    <%= form.label :descricao, "Descrição do Blog" %>
    <%= form.text_area :descricao %>
  </div>

  <div>
    <%= form.submit "Criar Blog" %>
  </div>

  <% if @blog.persisted? %>
    <div>
      <%= link_to "Editar Blog", edit_blog_path(@blog) %>
    </div>
  <% end %>
<% end %>
