<%= form_for @blog, html: { multipart: true, class: "max-w-md mx-auto" }, local: true do |form| %>
  <%= hidden_field_tag :locale, params[:locale] %>

  <!-- Título -->
  <div class="relative z-0 w-full mb-5 group mt-6">
    <%= form.text_field :titulo, class: "peer block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600", placeholder: " " %>
    <%= form.label :titulo, "Título do Blog", class: "peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0]" %>
  </div>

  <!-- Descrição -->
  <div class="relative z-0 w-full mb-5 group">
    <%= form.text_area :descricao, class: "peer block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600", placeholder: " " %>
    <%= form.label :descricao, "Descrição do Blog", class: "peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6 absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0]" %>
  </div>

  <!-- Arquivos -->
  <div>
    <%= form.fields_for :blog_arquivos do |f| %>
      <%= render partial: "blog_arquivos_fields", locals: { form: f } %>
    <% end %>
  </div>

  <!-- Botão de envio -->
  <div class="flex justify-center">
    <%= form.submit "Criar Blog", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center", data: { disable_with: "Enviando..." } %>
  </div>
<% end %>
